{% extends 'base.html.twig' %}

{% block title %}Langage index{% endblock %}

{% block body %}
    <h1>Langage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for langage in langages %}
            <tr>
                <td>{{ langage.id }}</td>
                <td>{{ langage.nom }}</td>
                <td>
                    <a href="{{ path('langage_show', {'id': langage.id}) }}">show</a>
                    <a href="{{ path('langage_edit', {'id': langage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('langage_new') }}">Create new</a>
{% endblock %}
