<div class="card mb-4">
    {% if joueur.fileName %}
    <img src="/images/joueurs/{{ joueur.filename }}" style="width: 100%; height:300px" alt="card-img-top">
   {% else %}
   <img src="/images/joueurs/empty.jpg" style="width: 100%; height:300px" alt="card-img-top">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title text-center">
            <a href="{{ path('joueur.show', {slug: joueur.slug, id: joueur.id}) }}" style="font-size:1.7rem; font-weight: bold"> {{joueur.nom}}                 
            </a>
        </h5>
        <p class="card-text"> Potentiel max : {{ joueur.niveau}} |  Âge : {{ joueur.age}} Ans </p>
        <div class="text-primary" style="font-size:1.6rem;">
            {{ joueur.formattedPrix}} €
        </div>
    </div>
</div>
